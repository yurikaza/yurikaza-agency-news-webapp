<%- include('../variables/header.ejs') %> <%-
include('../variables/boilerplate.ejs') %>

<div class="container">
  <div class="row col-12" style="margin: 0 auto">
    <h1 class="pt-5">Hello Finance World</h1>
    <% if(categories != null) { %> <% categories.forEach(function(article,
    index) { %>
    <div class="card mb-3 mt-5" style="width: 80%; margin: 0 auto">
      <div class="row g-0">
        <div class="col-md-4">
          <img
            src="<%- article.image %>"
            class="img-fluid rounded-start"
            alt="..."
            style="height: 100%; width: 100%"
          />
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%- article.title %></h5>
            <h5 class="card-title">Author: <%- article.author %></h5>
            <p class="card-text"><%- article.description %></p>
            <p class="card-text">Category: <%- article.category %></p>
            <p class="card-text">Date: <%- article.published %></p>
            <a href="<%- article.url %>" class="btn btn-primary">Read More</a>
          </div>
        </div>
      </div>
    </div>
    <% }) %> <% } else { %> No posts found. <% } %>
  </div>
</div>
<%- include('../variables/footer.ejs') %>
